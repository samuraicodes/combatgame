import random

class Fighter():
    
    listNames = ["Bruce","Ali", "Ho", "Saenchai", "Masutatsu"]
    
    def __init__(self, name, martial_art,hits):
        self.name = name
        self.martial_art = martial_art
        self.hits = hits


fighter_bruce = Fighter("Bruce","Jeet Kune Do", ["Sidekick","Knee", "Finger jab", "One inch punch"])#patada lateral rodillazos finger jab one inch punch 
fighter_ali = Fighter("Ali", "Box", ["Jab","Cross","Swing","Upercut"])
fighter_ho = Fighter("Ho", "Taekwondo", ["Hansonal mok", "Palkup","Murup", "Dolio chagui"])#Hansonal mok chigui(Golpe de canto al cuello) Palkup chigui(codo) Murup chigui(rodilla) Dolio chagui(patada circular) 
fighter_saenchai = Fighter("Saenchai", "Muay Thai", ["Mad","Sok","Kao","Tae"]) #MadPuÃ±o #Sokcodo #Kaorodilla tae patada
fighter_masutatsu = Fighter("Mutatsu", "Karate Kyokushin", ["SuneGeri", "Hiza", "Kento", "Atama"]) #SuneGeriLOwKick #HizaRodilla #Kento Nudillos #Atama #Cabeza

fighter_list = [fighter_bruce , fighter_ali, fighter_ho, fighter_saenchai, fighter_masutatsu]

listNames = "(1) Bruce" + " - (2) Ali" + " - (3) Ho" + " - (4) Saenchai" + " - (5) Masutatsu"

number_of_players = ""
user = ""
user_two = ""
machine = ""

energy_user = 100
energy_machine = 100
energy_user_two = 100
start = True

output_versus = "{0} ({1}) VS {2} ({0})"

#1 vs 1 or 1 vs Machine
def select_one_or_two_players():
    global number_of_players
    print("One or Two players?")
    number_of_players = int(input().isdigit())
    answers =[1,2]
    while not number_of_players in answers:
        print("Error. Only numbers. 1 or 2")
        number_of_players = int(input().isdigit())

#Player1

def select_player():
    global user
    global fighter_list
    print("Select your fighter:" + listNames)
    name = int(input().isdigit())
    answers = [1,2,3,4,5]
    while name not in answers:
        print("Only numbers:" + listNames)
        name = int(input().isdigit())
    user = fighter_list[name]


def user_atack():
    global energy_machine
    global energy_user_two
    print("Select your hit: ", user.hits )
    punch = input()
    if number_of_players == 1:
        energy_machine = (energy_machine + random.randint(0,5)) - (random.randint(0,5)+random.randint(5,25))
    elif number_of_players == 2:
        energy_user_two = (energy_user_two + random.randint(0,5)) - (random.randint(0,5)+random.randint(5,25))
    user_energy_check()


def user_energy_check():
    global start
    global energy_user
    global energy_user_two
    global energy_machine
    if number_of_players == 1:
        if energy_user > 10 and energy_machine > 10:
            print("Your oponent energy is:", energy_machine)
        if energy_user < 10:
            start = False
    elif number_of_players == 2:
        if energy_user > 10 and energy_user_two > 10:
            print("Player two energy is:", energy_user_two)
        if energy_user < 10:
            start = False
    
#Machine
        
def select_machine():
    global machine
    machine = random.choice(fighter_list)
    
    
def machine_atack():
    global energy_user
    punch = random.choice(user.hits)
    print(machine.name, " hit you with", punch)
    energy_user = (energy_user + random.randint(0,5)) - (random.randint(0,5)+random.randint(5,25))
    machine_energy_check()
    
    
def machine_energy_check():
    global start
    global energy_machine
    if energy_machine > 10 and energy_user > 10:
        print("Your energy is:", energy_user)
        if energy_machine < 0:
            print("Your energy is: 0")
    if energy_machine < 10:
        start = False

#Player 2

def select_user_two():
    global user_two
    print("Select your fighter:" + listNames)
    name = int(input().isdigit())
    answers = [1,2,3,4,5]
    while name not in answers:
        print("Only numbers:" + listNames)
        name = int(input().isdigit())
    user_two = fighter_list[name]
    

def user_two_atack():
    global energy_user
    print("Select your hit: ", user_two.hits )
    punch = input()
    energy_user = (energy_user + random.randint(0,5)) - (random.randint(0,5)+random.randint(5,25))
    user_two_energy_check()


def user_two_energy_check():
    global start
    global energy_user
    if energy_user > 10 and energy_user_two > 10:
        print("Player One energy is:", energy_user)
    if energy_user_two < 10:
        start = False

#Start Game

select_one_or_two_players()

if number_of_players == 1:
    select_player()
    select_machine()
    print(output_versus.format(user.name, user.martial_art, machine.name,machine.martial_art))
    while start:
        user_atack()
        machine_atack()
    if energy_user < energy_machine: print("You loose")
    else:
        print("You win")

if number_of_players == 2:
    select_player()
    select_user_two()
    print(output_versus.format(user.name, user.martial_art, user_two.name,user_two.martial_art))
    while start:
        user_atack()
        user_two_atack()
    if energy_user < energy_user_two: print("You loose")
    else:
        print("You win")
        
        



